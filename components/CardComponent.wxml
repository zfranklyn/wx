<template name="MainCard">
  <view class="card-container">
    <view class="main-card">
      <image 
        src="{{data.imgUrl}}"
        mode="aspectFill"
        class="hero-img"
        style="height: 100%"
      />

      <view class="underlay-box {{data.displaySettings.underlayTop}} {{data.displaySettings.colorSchemeTop}}">
        <view class="surtitle">
          {{data.surtitle}}
        </view>
        <view class="title">
          {{data.title}}
        </view>
      </view>

      <view class="description-box {{data.displaySettings.underlayBottom}} {{data.displaySettings.colorSchemeBottom}}">
        {{data.shortDescription}}
      </view>
    </view>
  </view>
</template>
